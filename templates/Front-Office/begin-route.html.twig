          crossorigin="anonymous">
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/style-route.css">

    <title>Begin route MyMuseum</title>

</head>

<body>

<header>
    <div class="container-fluid">
        <div class="row">
            <div class="col">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="navbar-brand" href="#">MyMuseum</a>

                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Accès admin</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
            <!-- col -->
        </div>
        <!-- row -->
    </div>
</header>
<section class="picture-museum">
    <div class="section-route container-fluid">
        <div class="row">

            <div id="museum-map" class="col-12 col-md-6">
            </div>

            <div class="museum-wrapper col col-md-6 text-center">
                <div class="museum-stats">
                    <div class="score text-center">
                        <h2 class="h4">Score</h2>
                        <p>0/100</p>
                    </div>

                    <div class="progression text-center">
                        <h2 class="h4">Progression</h2>
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                            </div>
                        </div> <!-- progress -->
                    </div> <!-- progression -->
                </div> <!-- museum stats -->

                <div class="return-btn">
                    <button type="button" class="btn btn-primary btn-lg">
                        <a href="select-parcours.html">Retour à mon parcours</a>
                    </button>
                </div> <!-- button -->
            </div> <!-- wrapper col -->
        </div> <!-- row  -->
    </div>  <!-- container -->
</section>

