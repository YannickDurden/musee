{% extends 'front-base.html.twig' %}

{% block stylesheets %}<link rel="stylesheet" href="{{app.request.basepath}}/css/quiz.css">{% endblock %}

{% block body %}
    <main class="row">
        <section class="map">
            <div class="col-md-6">
                <img class="img-map"
                     src="{{ app.request.basepath }}/uploads/{{ map }}" alt="map-museum">
            </div>
        </section>
        <div class="col-md-6">
            <section class="picture-quiz">
                <img class="w-100 img-fluid" src="{{app.request.basepath}}/uploads/809d741d948ff84be27b289c95c8745e.jpeg"
                     alt="picture-rio">
                <h1 class="text-center">Quiz</h1>
            </section>

            <section class="quiz">
                <div>
                    <p>{{ question.label }}<!-- Ici la question--></p>

                    <form action="score_quiz.html" method="post">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios"
                                   id="exampleRadios1" value="option1" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                {{ answer.value }}
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios"
                                   id="exampleRadios2" value="option2">
                            <label class="form-check-label" for="exampleRadios2">
                                <!-- Reponse 2-->
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios"
                                   id="exampleRadios3" value="option3">
                            <label class="form-check-label" for="exampleRadios3">
                                <!-- Reponse 3-->
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios"
                                   id="exampleRadios4" value="option4">
                            <label class="form-check-label" for="exampleRadios4">
                                <!-- Reponse 4-->
                            </label>
                        </div>
                        <!-- START SCRIPT MODAL -->
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#exampleModalCenter">
                            Valider
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1"
                             role="dialog">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title"
                                            id="popup-quiz">Quiz</h5>
                                        <button type="button" class="close"
                                                data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Bravo !
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button"
                                                class="btn btn-secondary"
                                                data-dismiss="modal">
                                            Fermer
                                        </button>
                                        <button type="submit"
                                                id="btn-modal"
                                                class="btn btn-primary">
                                            <a href="{{ path("score_quiz") }}">Je contiue</a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END SCRIPT MODAL -->
                    </form>
                </div>
            </section>
        </div>
    </main>
{% endblock %}