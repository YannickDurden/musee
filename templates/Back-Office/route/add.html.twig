{% extends 'base.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="container bg-light">
        <div class="row">
            <div class="col col-3 bg-primary">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active text-light" href="#">Carte</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Repère</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Parcours</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Administration</a>
                    </li>
                </ul>
            </div>
            <div class="col col-9">
                {#{{ form(formAdd, {'attr': {'novalidate': 'novalidate'}}) }}#}
                {{ form_start(formAdd) }}

                    <div class="col col-12">
                        <h4>Ajouter un parcours</h4>
                    </div>
                    <div class="col col-12 d-flex justify-content-center" id="museumMap">
                        <figure class="figure m-3">
                            <figcaption class="figure-caption">Selectionner les reperes depuis la map</figcaption>
                            <img src="{{app.request.basepath}}/uploads/{{ museum.map }}" alt="map du musée" height="300" width="400">
                        </figure>

                    </div>
                    <div class="col col-9">
                        <div class="form-group">
                            {{ form_label(formAdd.name, "Nom du parcours") }}
                            {{ form_errors(formAdd.name) }}
                            {{ form_widget(formAdd.name, {'attr': {'placeholder': 'Entrer le nom du parcours', 'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(formAdd.duration, "Durée estimée du parcours") }}
                            {{ form_errors(formAdd.duration) }}
                            {{ form_widget(formAdd.duration) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(formAdd.marks) }}
                            {{ form_errors(formAdd.marks) }}
                            <div class="form-check">
                                {{ form_widget(formAdd.marks) }}
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            {{ form_row(formAdd.save, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>

                {{ form_end(formAdd) }}
            </div>
    </div>
{%  endblock %}