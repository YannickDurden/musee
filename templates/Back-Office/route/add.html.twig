{% extends '/Back-Office/base.back-office.html.twig' %}

{% block stylesheets %}

{% endblock %}

{% block body %}

    <div class="border border-info rounded m-2 p-2">
    {{ form_start(formAdd, {'attr': {'id': 'add_route_form'}}) }}

    <h4>Ajouter un parcours</h4>

    <div class="col col-9 d-flex justify-content-center" id="museumMap">
        <figure class="figure m-3">
            <figcaption class="figure-caption">Selectionner les reperes depuis la map</figcaption>
            <img src="{{app.request.basepath}}/uploads/{{ museum.map }}" alt="map du musée" height="300" width="400">
        </figure>
    </div>
    <div class="col col-9 d-flex ml-3">
        <div class="form-group">
            <div class="m-1">
                <h5>{{ form_label(formAdd.name, "Nom du parcours:") }}</h5>
                {{ form_errors(formAdd.name) }}
                {{ form_widget(formAdd.name, {'attr': {'placeholder': 'Entrer le nom du parcours', 'class': 'form-control col-6'}}) }}
            </div>
            <div class="m-1">
                <h5>{{ form_label(formAdd.duration, "Durée estimée du parcours:") }}</h5>
                {{ form_errors(formAdd.duration) }}
                {{ form_widget(formAdd.duration) }}
            </div>
            <div class="m-1">
                <h5>{{ form_label(formAdd.marks, "Selectionner les repères à ajouter:") }}</h5>
            <div class="form-check">
                {{ form_errors(formAdd.marks) }}
                {{ form_widget(formAdd.marks) }}
            </div>
            </div>
            <div class="d-flex justify-content-end">
                {{ form_row(formAdd.save, {'label': 'Ajouter le parcours'}) }}
            </div>
        </div>
    </div>

    {{ form_end(formAdd) }}
    </div>

{%  endblock %}