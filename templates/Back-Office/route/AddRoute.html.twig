{% block body %}
    <h4 class="p-3">Modification d'un parcours</h4>
    {{ form_start(formAdd,{'attr': {'id': 'add_route_form'}}) }}
    <div class="col col-9">
        <div class="form-group">
            <div class="m-1">
                <h5>{{ form_label(formAdd.name, "Nom du parcours") }}</h5>
                {{ form_errors(formAdd.name) }}
                {{ form_widget(formAdd.name, {'attr': {'placeholder': 'Entrer le nom du parcours', 'class': 'form-control col-6'}}) }}
            </div>
            <div class="m-1">
                <h5>{{ form_label(formAdd.map, "Selectionner la map du") }}</h5>
                {{ form_errors(formAdd.map) }}
                {{ form_widget(formAdd.map) }}
            </div>
            <div class="m-1">
                <h5>{{ form_label(formAdd.duration, "Durée estimée du parcours") }}</h5>
                {{ form_errors(formAdd.duration) }}
                {{ form_widget(formAdd.duration) }}
            </div>
            <div class="m-1">
                <h5>{{ form_label(formAdd.description, "Description du parcours") }}</h5>
                {{ form_errors(formAdd.description) }}
                {{ form_widget(formAdd.description) }}
            </div>
            <div class="m-1">
                <h5>{{ form_label(formAdd.marks, "Selectionner les repères à ajouter") }}</h5>
                {{ form_errors(formAdd.marks) }}
                {{ form_widget(formAdd.marks) }}
            </div>
            <div class="d-flex justify-content-end">
                {{ form_widget(formAdd.save,
                    {'label': 'Modifier le parcours'}
                )}}
            </div>
        </div>
    </div>
    {{ form_end(formAdd) }}
{% endblock %}