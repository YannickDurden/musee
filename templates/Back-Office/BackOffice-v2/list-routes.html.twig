<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/style-back-office-v2.css">

</head>
<body>
<div class="container-fluid bg-light">
    <div class="row" id="content">
        <div class="col col-2"></div>
        <div class="col col-2 bg-primary" id="col-nav">
            <nav class="nav flex-column" id="nav">
                <div class="nav-item">
                    <h4><a class="nav-link active text-light" href="{{ path('add_map')}}">Musée</a></h4>
                </div>
                <div class="nav-item">
                    <h4 class="mb-0"><a class="nav-link text-light" href="{{ path('list_routes') }}">Parcours</a></h4>
                    <nav class="nav flex-column pl-3">
                        <a class="nav-link text-light" href="{{ path('AddMark_add') }}">Ajouter</a>
                        <a class="nav-link text-light" href="{{ path('edit_routev2') }}">Modifier</a>
                    </nav>
                </div>
                <div class="nav-item">
                    <h4 class="mb-0"><a class="nav-link text-light" href="{{ path('new_route') }}">Quizz</a></h4>
                    <nav class="nav flex-column pl-3">
                        <a class="nav-link text-light" href="{{ path('new_route') }}">Ajouter</a>
                        <a class="nav-link text-light" href="{{ path('edit_route') }}">Modifier</a>
                    </nav>
                </div>
                <div class="nav-item" id="logout">
                    <h4><a class="nav-link text-light" href="{{ app.request.basepath }}/logout">Déconnexion <i class="fa fa-power-off" aria-hidden="true"></i></a></h4>
                </div>
            </nav>
        </div>
        <div class="col col-10" id="col-content">
            <ol class="breadcrumb">
                <li><a href="#" title="Accueil">Accueil</a></li>
                <li><a href="#" title="formations">Parcours</a></li>
                <li class="#">Ajouter</li>
            </ol>
            <h3>Liste de tout les parcours</h3>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom du parcours</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                {% for route in allRoutes %}
                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ route.name }}</td>
                        <td><a href="#" id="{{ route.id }}"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                        <td><a href="#" id="{{ route.id }}"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
</body>
</html>