{% extends '/Back-Office/BackOffice-v2/base.back2.html.twig' %}
   {% block stylesheet %}<link rel="stylesheet" href="{{ app.request.basepath }}/css/style-back-office-v2.css">{% endblock %}

{% block body %}
            <ol class="breadcrumb">
                <li><a href="#" title="Accueil">Accueil</a></li>
                <li><a href="#" title="formations">Parcours</a></li>
                <li class="#">Liste</li>
            </ol>
            <h3>Liste de tout les parcours</h3>
            <table class="table table-striped" id="table-parcours">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nom du parcours</th>
                        <th scope="col">Modifier</th>
                        <th scope="col">Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                {% for route in allRoutes %}

                    <tr>
                        <th scope="row">{{ loop.index }}</th>
                        <td>{{ route.name }}</td>
                        <td><a href="#" id="{{ route.id }}"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                        <td><a href="#" id="{{ route.id }}"><i class="fa fa-trash" aria-hidden="true"></i></a></td>
                    </tr>

                {% endfor %}
                </tbody>
            </table>
{% endblock %}
{% block scriptJavascript %}
    <script src ="{{app.request.basepath}}/js/route-list.js"></script>
{% endblock %}