<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css" integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/style-back-office-v2.css">
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <div class="container-fluid bg-light">
        <div class="row" id="content">
            <div class="col col-2 bg-primary" id="col-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <h4><a class="nav-link active text-light" href="{{ path('add_map')}}">Musée</a></h4>
                    </li>
                    <li class="nav-item">
                        <h4 class="mb-0"><a class="nav-link text-light" href="{{ path('AddMark_add') }}">Parcours</a></h4>
                        <nav class="nav flex-column pl-3">
                            <a class="nav-link text-light" href="{{ path('AddMark_add') }}">Ajouter</a>
                            <a class="nav-link text-light" href="{{ path('AddMark_add') }}">Modifier</a>
                        </nav>
                    </li>
                    <li class="nav-item">
                        <h4 class="mb-0"><a class="nav-link text-light" href="{{ path('new_route') }}">Quizz</a></h4>
                        <nav class="nav flex-column pl-3">
                            <a class="nav-link text-light" href="{{ path('new_route') }}">Ajouter</a>
                            <a class="nav-link text-light" href="{{ path('edit_route') }}">Modifier</a>
                        </nav>
                    </li>
                    <li class="nav-item" id="logout">
                        <h4><a class="nav-link text-light" href="{{ app.request.basepath }}/logout">Déconnexion</a></h4>
                    </li>
                </ul>
            </div>
            <div class="col col-10" id="col-content">
                <ol class="breadcrumb">
                    <li><a href="#" title="Accueil">Accueil</a></li>
                    <li><a href="#" title="formations">Parcours</a></li>
                    <li class="#">Ajouter</li>
                </ol>
                        <button class="btn btn-primary mb-2" type="button" id="show-route" data-toggle="collapse" data-target="#infoParcours" aria-expanded="false" aria-controls="collapseExample">
                            Informations générales du parcours
                        </button>
                <div class="collapse" id="infoParcours">
                    <form action="#">
                    <div class="row" id="info-parcours">
                        <div class="col col-4 d-flex flex-column">
                            <label for="name">Nom du parcours</label>
                            <input type="text" id="name">
                            <div id="timepicker">
                                <p>Durée du parcours</p>
                                <select name="hours" id="hours">
                                    {% for i in range(1,24) %}
                                    <option value="{{ loop.index }}">{{ loop.index }}</option>
                                    {% endfor %}
                                </select>
                                <select name="minutes" id="minutes">
                                    {% for i in range(1,60) %}
                                        <option value="{{ loop.index }}">{{ loop.index }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="col col-8 d-flex flex-column">
                            <label for="name">Description du parcours</label>
                            <input type="text" id="description">
                            {{ form_start(formList) }}
                            {{ form_label(formList.route, 'Modifier un parcours existant') }}
                            {{ form_widget(formList.route, {'attr': {'id': 'add_route_form'}}) }}
                            {{ form_end(formList) }}
                            <button type="submit" class="btn btn-primary mb-3" id="submit-info-parcours">Valider</button>
                        </div>
                    </div>
                    </form>
                </div>
                <div class="row">
                    <div class="col col-6" id="map">
                        <div class="col">
                        <img src="{{app.request.basepath}}/uploads/3a21affb941c055aef263779545d4c57.jpeg" alt="image en dur">
                        </div>
                        <div id="wrapper">
                            <div id="animation">
                                <div id="block_1" class="barlittle"></div>
                                <div id="block_2" class="barlittle"></div>
                                <div id="block_3" class="barlittle"></div>
                                <div id="block_4" class="barlittle"></div>
                                <div id="block_5" class="barlittle"></div>
                            </div>
                        </div>
                        <div class="col" id="liste-reperes">
                        </div>
                        <div class="col" id="selectedMark">
                        </div>
                    </div>
                    <div class="col col-5 border border-info" id="repere">
                        <h3 class="mb-4">Modifier ou Ajouter un repere</h3>
                        <form action="#">
                            <p>
                                <label for="name">Nom du repere
                                    <input type="text" name="name">
                                </label>
                            </p>
                            <p>
                                <label for="question">Quizz du repere
                                    <input type="text" name="question">
                                </label>
                            </p>
                            <p>
                                <label for="description">Description du repere
                                    <input type="text" name="description">
                                </label>
                            </p>
                            <p>
                                <label for="coordonneeX">Coordonnée X
                                    <input type="text" name="coordonneeX">
                                </label>
                            </p>
                            <p>
                                <label for="coordonneeY">Coordonnée Y
                                    <input type="text" name="coordonneeY">
                                </label>
                            </p>
                            <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary" id="send-mark">Ajouter/Modifier</button>
                            </div>
                        </form>
                    </div>
                </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/js/bootstrap.min.js" integrity="sha384-a5N7Y/aK3qNeh15eJKGWxsqtnX/wWdSZSKp+81YjTmS15nvnvxKHuzaWwXHDli+4" crossorigin="anonymous"></script>
    <script src ="{{app.request.basepath}}/js/parcoursv2.js"></script></body>
</html>