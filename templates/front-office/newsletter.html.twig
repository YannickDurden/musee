{% extends "front-base.html.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ app.request.basepath }}/css/newsletter.css">
{% endblock %}

{% block body %}

<section class="picture-museum">
    <div class="section-email container-fluid">
        <div class="row">

            <div id="museum-img" class="col-12 col-md-6">
                <img src="http://lorempicsum.com/nemo/627/300/4" class="img-fluid" alt="museum">
            </div>

            <div class="col-12 col-md-6">
                <!-- form class form-email -->
                {{ form_start(formRegister,{'attr':{'class': 'form-email'}}) }}
                    <div class="form-group">
                        {{ form_label(formRegister.firstname)}}
                        {{ form_errors(formRegister.firstname) }}
                        {{ form_widget(formRegister.firstname,
                            {'attr': {'class':'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(formRegister.lastname)}}
                        {{ form_errors(formRegister.lastname) }}
                        {{ form_widget(formRegister.lastname,
                            {'attr': {'class':'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(formRegister.email)}}
                        {{ form_errors(formRegister.email) }}
                        {{ form_widget(formRegister.email,
                            {'attr': {'class':'form-control'}}) }}
                    </div>

                    <div class="form-check">
                        {{ form_widget(formRegister.newsletter,
                            {'attr': {'class':'form-check-input', 'id':'conditions'}}
                        ) }}
                        {{ form_label(formRegister.newsletter)}}
                    </div>

                <!------------------------------>
                <div id="role">
                    {{ form_widget(formRegister.role,
                        {'attr': {'class':'role'}}
                    ) }}
                </div>
                <!------------------------------>

                    <div class="return-btn">
                        <!-- START SCRIPT MODAL mail -->
                        <!-- Button trigger modal -->
                        {{ form_widget(formRegister.submit,
                            {'attr': {'class': 'btn btn-primary btn-lg'}}
                        ) }}


                        <!-- Modal -->
                        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog">
                            <div class="modal-dialog modal-dialog-centered" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="popup-quiz">Retour à l'accueil</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Vos résultats ont bien été envoyé. Merci de votre visite et à bientôt.
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-primary" data-dismiss="modal">
                                            <a href="home.html">Retour à la page d'accueil</a>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- END SCRIPT MODAL mail -->
                    </div>
                {{ form_end(formRegister) }}

                <!-- /form -->
            </div>
        </div>
    </div>

</section>

{% endblock %}