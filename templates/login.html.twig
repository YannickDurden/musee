{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-4 bg-light p-4 border border-info rounded">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('admin_login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Login:</label>
                        <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}", placeholder= "Entrer votre nom d'utilisateur" />
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe:</label>
                        <input type="password" id="password" name="_password" class="form-control" placeholder= "Entrer votre mot de passe" />

                    </div>
                    <button type="submit" class="btn btn-primary">Connexion</button>
                </form>
            </div>
        </div>
    </div>








{% endblock %}